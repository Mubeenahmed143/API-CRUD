@model IEnumerable<simple.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h1 class="text-center text-uppercase mb-5 text-primary">The Ice Cream</h1>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="text-primary font-weight-bold">Manage Products</h4>
        <a asp-action="Create" class="btn btn-success btn-lg px-4 py-2">+ Create New</a>
    </div>

    <!-- Table -->
    <div class="table-responsive shadow-lg rounded overflow-hidden">
        <table class="table table-striped table-hover table-bordered table-sm">
            <thead class="table-dark text-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Quantity)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Desc)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Image)</th>

                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.Desc)</td>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.Image)" height="60px" width="60px" alt="ProImg">
                        </td>
                        <td class="text-center">
                            <!-- Edit and Delete buttons -->
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Custom CSS -->
<style>
    /* Apply some custom padding and margin */
    .container {
        padding: 20px;
    }

    .table th, .table td {
        vertical-align: middle;
        text-align: center;
    }

    .table-responsive {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
    }

    .table-dark {
        background-color: #343a40;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: 600;
    }

    /* Buttons */
    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
    }

    .btn-success:hover {
        background-color: #218838;
        border-color: #1e7e34;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0069d9;
        border-color: #0062cc;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    /* Header Style */
    h1 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 2.5rem;
    }

    h4 {
        font-family: 'Arial', sans-serif;
        font-size: 1.5rem;
        font-weight: 600;
    }

    /* Add some hover effects to the table rows */
    tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>
